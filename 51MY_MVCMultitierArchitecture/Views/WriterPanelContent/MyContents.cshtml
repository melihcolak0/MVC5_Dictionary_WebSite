@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "MyContents";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<br />
<h3>Yazılarım</h3>
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">

                <!-- Timelime example  -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <div class="timeline">
                            <!-- timeline time label -->
                            @foreach (var x in Model)
                            {
                                <div class="time-label">
                                    <span class="bg-warning">@(((DateTime)x.ContentDate).ToString("dd-MMMM-yyyy"))</span>
                                </div>
                                <!-- /.timeline-label -->
                                <!-- timeline item -->
                                <div>
                                    <i class="fas fa-pencil-alt bg-success"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header">
                                            <a href="#">
                                                @x.Heading.HeadingName
                                            </a>
                                            <small>
                                                (@x.Writer.WriterName @x.Writer.WriterSurName)
                                            </small>
                                        </h3>
                                        <div class="timeline-body">
                                            @x.ContentValue
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- END timeline item -->
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>
