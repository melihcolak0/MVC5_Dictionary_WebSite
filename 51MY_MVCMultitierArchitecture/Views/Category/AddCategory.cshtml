@model EntityLayer.Concrete.Category
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div style="margin-left: 20px; margin-right: 20px;">
    <br />
    <h3>Kategori Ekleme Sayfası</h3>
    <br />

    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
    {
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color: red;" })
        <br />

        @Html.Label("Açıklama")
        @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @style = "color: red;" })
        <br />

        <button class="btn btn-info">Kaydet</button>
    }
</div>