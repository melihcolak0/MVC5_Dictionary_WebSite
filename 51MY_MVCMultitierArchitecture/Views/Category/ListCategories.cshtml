@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div style="margin-left: 20px;  margin-right: 20px;">
    <br />
    <h3>Kategori Listeleme</h3>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Kategori Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>Durum</th>
        </tr>        
        @foreach(var x in Model)
        {
            <tr>
                <td>@x.CategoryId</td>
                <td>@x.CategoryName</td>
                <td>@x.CategoryDescription</td>
                <td>@x.CategoryStatus</td>
            </tr>
        }
        
    </table>
    <a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori Ekle</a>
</div>

